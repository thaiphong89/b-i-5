@model BookCRUD.Models.Book

<h1>Chi tiết sách</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tác giả</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Hình ảnh</dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="@Model.Title" style="max-width: 200px;" />
        </dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Trở lại</a>
